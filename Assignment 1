import numpy as np

# Days of the week and setup
days = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]
month_expenses = {day: [] for day in days}

def get_day_name(day_number):
    switcher = {
        1: "Monday",
        2: "Tuesday",
        3: "Wednesday",
        4: "Thursday",
        5: "Friday",
        6: "Saturday",
        7: "Sunday"
    }
    return switcher.get(day_number, None)

print("ğŸ“… Monthly Budget Tracker")
print("Enter your expenses by selecting a day number:")
print("1. Monday\n2. Tuesday\n3. Wednesday\n4. Thursday\n5. Friday\n6. Saturday\n7. Sunday")
print("Type 0 to finish.\n")

while True:
    try:
        day_num = int(input("Select a day (1-7) or 0 to exit: "))
        if day_num == 0:
            break

        day_name = get_day_name(day_num)
        if not day_name:
            print("âŒ Invalid day number. Please select between 1 and 7.")
            continue

        amount = float(input(f"Amount spent on {day_name}: â‚¹"))
        month_expenses[day_name].append(amount)
    
    except ValueError:
        print("âŒ Please enter valid numbers only.")

# Generate Report
print("\nğŸ“Š Monthly Expense Report:")

totals = {}
for day, expenses in month_expenses.items():
    np_exp = np.array(expenses)
    totals[day] = np_exp.sum()

for day in days:
    print(f"{day}: â‚¹{totals[day]:.2f}")

# Summary
total_month = sum(totals.values())
average_day = total_month / 30
max_day = max(totals, key=totals.get)
min_day = min(totals, key=totals.get)

print("\nğŸ§¾ Summary:")
print(f"Total spent in month: â‚¹{total_month:.2f}")
print(f"Average spending per day: â‚¹{average_day:.2f}")
print(f"Highest spending day: {max_day} (â‚¹{totals[max_day]:.2f})")
print(f"Lowest spending day: {min_day} (â‚¹{totals[min_day]:.2f})")
